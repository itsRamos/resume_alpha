<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="107dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ramos_test_round" />

            <TextView
                android:id="@+id/mainName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/rmain_name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#090909"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software Engineer in Test"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Professional Experience"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google via TechM"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senior Test Engineer"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText2"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:linksClickable="false"
                android:longClickable="false"
                android:text="Lead for improving the firmware automation that supports the timely release of high-quality Chromebooks.\nMaintain an automation lab for the Google Security Chip by troubleshooting failures and fixing bugs.  \nContribute to the automation infrastructure by refactoring old code and optimizing existing tests.\nUse Git to commit changes to source code and documentation on the Open Source platform.\nLed the shift of USB infrastructure from Type-A to Type-C that improved communication between the Embedded Controller and Application Processor, which expedited testing and expanded coverage. "
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="10sp"
                android:typeface="normal"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple via WeLocalize"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software QA Engineer"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Lead for improving the functionality and compatibility of Siri in with Apple Music, Home and AirPlay. \nLed the Software Localization of the Speech Recognition and Text-to-Speech engines for multiple locales. \nImproved efficiency by developing a tool in python that led to faster tests of the Text-Speech engine.\nDeveloped and automated sanity test using Quick and SiriS for Siri on the iPhone, HomePod and Apple TV, that expanded the testing to most domains of the Natural Language.  "
                android:textAlignment="textStart"
                android:textSize="10sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kyocera Document Solutions"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software QA Engineer"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:clickable="false"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Lead QA for mobile applications with grey-box test cases focused on usability, reliability and accessibility. \nLed the development of an Automation Solution for Parallel testing Android and iOS apps wirelessly. \nShortened execution time of iOS automation by 40 percent by developing a XCUITEST locator process.\nLaunched a JIRA tool that improved bug management, enabling developers to fix critical failures sooner. \nConducted training in Python for a QA department to kickstart a DevOps team in the company. "
                android:textAlignment="textStart"
                android:textSize="10sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RFSpot Incorporated"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software QA Engineer"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Examined a telepresence robot with a machine-vision software that scanned over 50,000 inventory tags.\nImproved battery lifetime by automating navigation routes that shortened the data acquisition time. \nMaximized detection performance by developing a pre-routing system that standardized the robotâ€™s route. "
                android:textAlignment="textStart"
                android:textSize="10sp"
                android:typeface="normal" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>